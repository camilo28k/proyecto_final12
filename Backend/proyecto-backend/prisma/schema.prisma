generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Health {
  id          String   @id @default(uuid())
  title       String
  description String
  goal        Float
  raised      Float    
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}
